{
  "name": "Social Media Blocker",
  "version": "1.0",
  "description": "Blocks social media after a period of time",
  "permissions": ["activeTab", "declarativeContent", "storage", "webNavigation","notifications"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/antisocialmedia16.png",
      "32": "images/antisocialmedia32.png",
      "48": "images/antisocialmedia48.png",
      "128": "images/antisocialmedia128.png"
    }
  },
  "icons": {
    "16": "images/antisocialmedia16.png",
    "32": "images/antisocialmedia32.png",
    "48": "images/antisocialmedia48.png",
    "128": "images/antisocialmedia128.png"
  },
  "manifest_version": 2
}
